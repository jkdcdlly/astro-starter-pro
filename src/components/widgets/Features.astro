---
import type { Feature } from "../../types/types";

interface Props {
    features: Feature[];
}

const { features = [] } = Astro.props;
---

<div class="mt-24 grid grid-cols-1 md:grid-cols-3 gap-8">
    {
        features.map((feature) => (
            <div class="p-8 rounded-2xl bg-card border border-border hover:border-primary/50 transition-all shadow-sm">
                {feature.icon && (
                    <div
                        class={`w-12 h-12 rounded-lg flex items-center justify-center mb-6 ${feature.iconClass ? feature.iconClass : "bg-primary/10 text-primary"}`}
                    >
                        <Fragment set:html={feature.icon} />
                    </div>
                )}
                <h3 class="text-xl font-bold text-foreground mb-3">
                    {feature.title}
                </h3>
                <p class="text-muted-foreground text-sm">
                    {feature.description}
                </p>
            </div>
        ))
    }
</div>
