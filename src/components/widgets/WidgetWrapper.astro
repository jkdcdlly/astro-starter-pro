---
import type { Widget } from "../../types/types";

const {
    id,
    isDark = false,
    containerClass = "",
    bg = "",
    classes = {},
} = Astro.props as Widget;

const wrapperClasses = {
    container: containerClass,
    ...classes,
};
---

<div
    id={id}
    class:list={["relative not-prose scroll-mt-[72px]", bg, { dark: isDark }]}
>
    <div
        class:list={[
            "relative mx-auto max-w-7xl px-4 md:px-6 py-12 md:py-16 lg:py-20 text-default",
            wrapperClasses.container,
        ]}
    >
        <slot />
    </div>
</div>
