---
import Form from "../ui/Form.astro";

interface Props {
    title?: string;
    description?: string;
    tagline?: string;
}

const {
    title = "Contáctanos",
    description = "Estamos aquí para ayudarte. Envíanos un mensaje y te responderemos lo antes posible.",
    tagline = "Contacto",
} = Astro.props;
---

<section class="mx-auto max-w-7xl px-4 py-24 sm:px-6 lg:px-8 md:py-32">
    <div class="mx-auto max-w-2xl text-center mb-16">
        {
            tagline && (
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 border border-primary/20 text-primary text-xs font-semibold mb-6">
                    {tagline}
                </div>
            )
        }
        {
            title && (
                <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl mb-4">
                    {title}
                </h2>
            )
        }
        {
            description && (
                <p class="text-xl text-muted-foreground">{description}</p>
            )
        }
    </div>

    <div
        class="mx-auto max-w-xl bg-card border border-border rounded-3xl p-8 shadow-sm"
    >
        <Form />
    </div>
</section>
