---
import { siteConfig } from "../../config/site";
---

<footer class="mt-20 border-t border-white/10 bg-black">
    <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
        <div
            class="flex flex-col items-center justify-between gap-8 md:flex-row"
        >
            <div class="flex flex-col items-center gap-2 md:items-start">
                <span class="text-lg font-bold text-white"
                    >{siteConfig.name}</span
                >
                <p class="text-sm text-gray-400">{siteConfig.description}</p>
            </div>
            <div class="flex items-center gap-6">
                <a
                    href="#"
                    class="text-gray-400 transition-colors hover:text-white"
                    >Twitter</a
                >
                <a
                    href="#"
                    class="text-gray-400 transition-colors hover:text-white"
                    >GitHub</a
                >
                <a
                    href="#"
                    class="text-gray-400 transition-colors hover:text-white"
                    >Discord</a
                >
            </div>
        </div>
        <div
            class="mt-8 border-t border-white/5 pt-8 text-center text-xs text-gray-500"
        >
            &copy; {new Date().getFullYear()}
            {siteConfig.author}. Todos los derechos reservados.
        </div>
    </div>
</footer>
