---
import BaseLayout from "../layouts/BaseLayout.astro";
import Features from "../components/widgets/Features.astro";
import Content from "../components/widgets/Content.astro";
import Form from "../components/ui/Form.astro";

const metadata = {
    title: "Contacto",
    description:
        "Ponte en contacto con nosotros para discutir tu próximo proyecto.",
};

const visionText = [
    "Ponte en contacto con nosotros para discutir tu próximo proyecto.",
];
---

<BaseLayout {metadata}>
    <Content
        tagline="Contacto"
        title="Contacto"
        description={visionText}
        class="pb-8 md:pb-12"
    />
    <div
        class="mx-auto max-w-xl bg-card border border-border rounded-3xl p-8 shadow-sm mb-24 md:mb-32"
    >
        <Form />
    </div>
    <Features
        title="Estamos aquí para ayudarte"
        subtitle="Elige el canal de comunicación que prefieras. Respondemos en menos de 24 horas."
        class="pt-0 md:pt-0"
        features={[
            {
                title: "Teléfono",
                description: "+123 456 7890",
                icon: "lucide:phone",
                iconClass: "bg-green-500/10 text-green-400",
            },
            {
                title: "Email",
                description: "contacto@empresa.com",
                icon: "lucide:mail",
                iconClass: "bg-yellow-500/10 text-yellow-400",
            },
            {
                title: "Ubicación",
                description: "Ciudad, País",
                icon: "lucide:map-pin",
                iconClass: "bg-red-500/10 text-red-400",
            },
            {
                title: "Atención Personalizada",
                description:
                    "Nos tomamos el tiempo para entender tus necesidades y ofrecerte soluciones a medida.",
                icon: "lucide:user-check",
                iconClass: "bg-blue-500/10 text-blue-400",
            },
            {
                title: "Soporte Técnico",
                description:
                    "Equipo disponible para resolver cualquier duda o incidencia técnica con rapidez.",
                icon: "lucide:wrench",
                iconClass: "bg-purple-500/10 text-purple-400",
            },
            {
                title: "Consultoría Estratégica",
                description:
                    "Te asesoramos en cada paso para asegurar el éxito y escalabilidad de tu proyecto.",
                icon: "lucide:briefcase",
                iconClass: "bg-pink-500/10 text-pink-400",
            },
        ]}
    />
</BaseLayout>
