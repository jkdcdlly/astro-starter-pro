---
import BaseLayout from "../layouts/BaseLayout.astro";
import { siteConfig } from "../config/site";
import Hero from "../components/widgets/Hero.astro";
import Features from "../components/widgets/Features.astro";
const metadata = {
	title: `${siteConfig.name} — El siguiente paso para tu proyecto`,
	description:
		"Una plantilla moderna y profesional para tus proyectos web con Astro y Tailwind CSS. Impulsá tu desarrollo con una base sólida.",
	ignoreTitleTemplate: true,
};
---

<BaseLayout {metadata}>
	<Hero
		title={`Construye más rápido con <br class="hidden md:block" /> <span class="bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">Astro Starter Pro</span>`}
		tagline="Nuevo: Astro v5 + Tailwind v4"
		description={`${siteConfig.description}. Optimizado para velocidad, accesibilidad y el mejor SEO de su clase.`}
		actions={[
			{
				text: "Comenzar ahora",
				href: "https://github.com/angelop47/astro-starter-template",
				variant: "primary",
			},
			{
				text: "Ver servicios",
				href: "/services",
			},
		]}
	>
		<Features
			features={[
				{
					title: "SEO de Elite",
					description:
						"Meta tags automáticos, Open Graph, Twitter Cards y Sitemap indexado perfectamente.",
					icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>`,
					iconClass: "bg-blue-500/10 text-blue-400",
				},
				{
					title: "Performance Extremo",
					description:
						"Prefetching de páginas, imágenes optimizadas y 0kb de JS innecesario por defecto.",
					icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path></svg>`,
					iconClass: "bg-purple-500/10 text-purple-400",
				},
				{
					title: "Tailwind v4",
					description:
						"Estilos modernos y rápidos con la última versión de Tailwind CSS vía Vite plugin.",
					icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 3v19M5 8l7-7 7 7M5 16l7 7 7-7"></path></svg>`,
					iconClass: "bg-pink-500/10 text-pink-400",
				},
			]}
		/>
	</Hero>
</BaseLayout>
