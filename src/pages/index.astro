---
import BaseLayout from "../layouts/BaseLayout.astro";
import { siteConfig } from "../config/site";
import Hero from "../components/widgets/Hero.astro";
import Features from "../components/widgets/Features.astro";
const metadata = {
	title: `${siteConfig.name} — El siguiente paso para tu proyecto`,
	description:
		"Una plantilla moderna y profesional para tus proyectos web con Astro y Tailwind CSS. Impulsá tu desarrollo con una base sólida.",
	ignoreTitleTemplate: true,
};
---

<BaseLayout {metadata}>
	<Hero
		title={`Construye más rápido con <br class="hidden md:block" /> <span class="bg-linear-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">Astro Starter Pro</span>`}
		tagline="Nuevo: Astro v5 + Tailwind v4"
		description={`${siteConfig.description}. Optimizado para velocidad, accesibilidad y el mejor SEO de su clase.`}
		actions={[
			{
				text: "Comenzar ahora",
				href: "https://github.com/angelop47/astro-starter-template",
				variant: "primary",
				icon: "lucide:github",
			},
			{
				text: "Ver servicios",
				href: "/services",
				variant: "secondary",
				icon: "lucide:arrow-right",
			},
		]}
	/>
	<Features
		tagline="Características"
		title="Todo lo que necesitas para empezar"
		subtitle="Astro Starter Template viene con las mejores prácticas de SEO, accesibilidad y performance integradas."
		features={[
			{
				title: "SEO de Elite",
				description:
					"Meta tags automáticos, Open Graph, Twitter Cards y Sitemap indexado perfectamente.",
				icon: "lucide:scan-search",
				iconClass: "bg-blue-500/10 text-blue-400",
			},
			{
				title: "Performance Extremo",
				description:
					"Prefetching de páginas, imágenes optimizadas y 0kb de JS innecesario por defecto.",
				icon: "lucide:zap",
				iconClass: "bg-purple-500/10 text-purple-400",
			},
			{
				title: "Tailwind v4",
				description:
					"Estilos modernos y rápidos con la última versión de Tailwind CSS vía Vite plugin.",
				icon: "lucide:palette",
				iconClass: "bg-pink-500/10 text-pink-400",
			},
		]}
	/>
</BaseLayout>
