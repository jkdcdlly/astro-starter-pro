---
import BaseLayout from "../layouts/BaseLayout.astro";
import Content from "../components/widgets/Content.astro";
import Values from "../components/widgets/Values.astro";
import aboutImage from "../assets/images/about-office.png";

const metadata = {
    title: "Nosotros",
    description:
        "Conoce más sobre nuestra visión, valores y el equipo detrás de Astro Starter Pro.",
};

const visionText = [
    "Somos apasionados por la tecnología y la creación de experiencias web que no solo se vean bien, sino que funcionen de manera excepcional. Esta plantilla es el resultado de años de optimización y mejores prácticas.",
    "Nuestro objetivo es empoderar a los desarrolladores para que construyan sitios rápidos, accesibles y amigables para los motores de búsqueda desde el primer minuto.",
];

const values = [
    {
        title: "Simplicidad",
        description:
            "Código limpio y fácil de entender, sin abstracciones innecesarias.",
    },
    {
        title: "Excelencia",
        description:
            "Cada detalle cuenta, desde la semántica HTML hasta la carga de activos.",
    },
];
---

<BaseLayout {metadata}>
    <Content
        tagline="Acerca de"
        title="Nuestra Visión"
        description={visionText}
        image={aboutImage}
        imageAlt="Oficina moderna de desarrollo web"
    >
        <Values items={values} columns={2} />
    </Content>
</BaseLayout>
