---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/ui/Button.astro";

const metadata = {
    title: "404 - Página no encontrada",
    description: "La página que buscas no existe.",
    ignoreTitleTemplate: true,
};
---

<BaseLayout {metadata}>
    <section
        class="flex h-[calc(100vh-200px)] flex-col items-center justify-center px-4 text-center"
    >
        <h1 class="font-heading mb-4 text-6xl font-bold text-primary">404</h1>
        <p class="mb-8 text-2xl font-medium text-foreground">
            Ups! No encontramos esa página.
        </p>
        <Button href="/" variant="primary" size="lg"> Volver al Inicio </Button>
    </section>
</BaseLayout>
